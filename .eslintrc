{
  "extends": ["eslint:recommended", "plugin:vue/recommended"],
  "rules": {
    "vue/html-self-closing": "off",
    "vue/max-attributes-per-line": [
      1,
      {
        "singleline": 1,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }
    ],
    "vue/html-indent": [
      "error",
      2,
      {
        "attribute": 1,
        "closeBracket": 0,
        "alignAttributesVertically": true,
        "ignores": []
      }
    ]
  }
}
